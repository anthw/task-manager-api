{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["es6","dom"],
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ]
  },
  "include": ["./src", "./tests", "./typings"],
  "exclude": ["node_modules"]
}
